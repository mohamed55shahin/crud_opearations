@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<form action="ResetPassword" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text" asp-for="NewPassword" placeholder="Password" required="">
			<input class="text" asp-for="ConfirmPassword" placeholder="Password" required="">
			
			<input type="submit" value="ResetPassword">
		</form>
		<p>Do You have an Account? <a asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />

}