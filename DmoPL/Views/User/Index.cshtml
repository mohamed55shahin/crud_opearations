@model IEnumerable<UserViewModel>
@{
	ViewData["Title"] = "All Users";
}

<h1>Index</h1>
<h1>All Users</h1>
<br />
<br />
<div class="row justify-content-center align-items-center m-4">
	<form asp-action="Index" class="row col-8 offset-1">
		<div class="col-8">
			<input type="text" class="form-control" name="email" placeholder="Search By email" />
		</div>
		<div class="col-4">
			<input type="submit" value="Search" class="btn btn-success" />
		</div>
	</form>
</div>
@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<td>@Html.DisplayNameFor(U=>U.Id)</td>
				<td>@Html.DisplayNameFor(U=>U.FName)</td>
				<td>@Html.DisplayNameFor(U=>U.LName)</td>
				<td>@Html.DisplayNameFor(U=>U.Email)</td>
				<td>@Html.DisplayNameFor(U=>U.PhoneNumber)</td>
				<td>@Html.DisplayNameFor(U=>U.Roles)</td>
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>

			</tr>
		</thead>
		<tbody>
			@foreach (var User in Model)
			{

				<tr>

					<td>@Html.DisplayFor(U=>User.Id)</td>
					<td>@Html.DisplayFor(U=>User.FName)</td>
					<td>@Html.DisplayFor(U=>User.LName)</td>
					<td>@Html.DisplayFor(U=>User.Email)</td>
					<td>@Html.DisplayFor(U=>User.PhoneNumber)</td>
					<td>@string.Join(" ",User.Roles)</td>
					<partial name="_ButtonPartialView" model="@User.Id" />

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="mt-4 alert alert-warning">
		<h3>There Is No Users!!</h3>
	</div>
}


