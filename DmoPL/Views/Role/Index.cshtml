@model IEnumerable<RoleViewModel>
@{
	ViewData["Title"] = "All Roles";
}

<h1>Index</h1>
<h1>All Roles</h1>
<br />
<br />
<a asp-action="Create" class="btn btn-primary">Create new Employee</a>

<div class="row justify-content-center align-items-center m-4">
	<form asp-action="Index" class="row col-8 offset-1">
		<div class="col-8">
			<input type="text" class="form-control" name="name" placeholder="Search By email" />
		</div>
		<div class="col-4">
			<input type="submit" value="Search" class="btn btn-success" />
		</div>
	</form>
</div>
@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<td>@Html.DisplayNameFor(U=>U.Id)</td>
				<td>@Html.DisplayNameFor(U=>U.RoleName)</td>
				
				<td>Details</td>
				<td>Update</td>
				<td>Delete</td>

			</tr>
		</thead>
		<tbody>
			@foreach (var User in Model)
			{

				<tr>

					<td>@Html.DisplayFor(U=>User.Id)</td>
					<td>@Html.DisplayFor(U=>User.RoleName)</td>
					
					<partial name="_ButtonPartialView" model="@User.Id" />

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="mt-4 alert alert-warning">
		<h3>There Is No Roles!!</h3>
	</div>
}


